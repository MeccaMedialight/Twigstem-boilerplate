<div class="flex flex-col md:flex-row py-4 max-w-5xl mx-auto md:gap-x-16">
    <div class="space-y-8 md:pr-16 prose lg:prose-xl ">
        <!-- main list -->
        <div class="text-gray-600 body-font overflow-hidden">
            <div class="container px-5 ">
                <div class="-my-8 divide-y-2 divide-gray-100">
                    {% if posts | length %}
                        {% for post in posts %}
                            <div class="py-8 flex flex-wrap md:flex-nowrap">
                                <div class="md:mr-8 md:w-64 md:mb-0 mb-6 flex-shrink-0 flex flex-col">
                            <span class="font-semibold title-font text-gray-700"><img
                                        class="lg:h-48 md:h-36 w-full object-cover object-center"
                                        src="https://www.dummyimage.com/720x400" alt="blog"></span> <span
                                            class="mt-1 text-gray-500 text-sm">12 Jun 2019</span>
                                </div>
                                <div class="md:flex-grow">
                                    <h2 class="text-2xl font-medium text-gray-900 title-font mb-2">
                                        Bitters hashtag waistcoat fashion axe chia unicorn
                                    </h2>
                                    <p class="leading-relaxed">
                                        Glossier echo park pug, church-key sartorial biodiesel vexillologist pop-up
                                        snackwave
                                        ramps cornhole. Marfa 3 wolf moon party messenger bag selfies, poke vaporware
                                        kombucha
                                        lumbersexual pork belly polaroid hoodie portland craft beer.
                                    </p>
                                    <a class="text-yellow-500 inline-flex items-center mt-4">Learn More
                                        <svg class="w-4 h-4 ml-2" viewbox="0 0 24 24" stroke="currentColor"
                                             stroke-width="2"
                                             fill="none" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M5 12h14"></path>
                                            <path d="M12 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        {% endfor %}
                    {% else %}
                        <div class="text-red">Error loading data ... is there a json file in the data path?</div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="md:w-1/3 flex-col md:space-y-8 mb-16 md:ml-8 md:border-l border-gray-100">
        <!-- sidebar -->
        <nav class="flex flex-col sm:items-start sm:text-left text-center items-center -mb-1 space-y-2.5">
            {% if links | length %}
                {% for item in links %}
                    <a>
            <span class="bg-{{ theme_base_colour }}-100 text-{{ theme_base_colour }}-500 w-4 h-4 mr-2 rounded-full inline-flex items-center justify-center">
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="3"
                   class="w-3 h-3" viewBox="0 0 24 24">
                <path d="M20 6L9 17l-5-5"></path>
              </svg>
            </span>{{ item.label }}
                    </a>
                {% endfor %}
            {% else %}
                <div class="text-red">Error loading data ... is there a json file in the data path?</div>
            {% endif %}
        </nav>
    </div>
</div>
